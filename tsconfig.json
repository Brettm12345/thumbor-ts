{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "downlevelIteration": true,
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "strict": true,
    "target": "es5"
  },
  "include": ["src"],
  "exclude": ["*.spec.ts", "node_modules"]
}
