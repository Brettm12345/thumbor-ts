{
  "name": "thumbor-ts",
  "version": "1.2.0",
  "description": "Typescript thumbor url builder",
  "repository": "github:brettm12345/thumbor-ts",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdx build --target node",
    "lint": "eslint {src,test}/*.ts",
    "lint:fix": "yarn lint --fix",
    "start": "tsdx watch --target node",
    "test": "tsdx test",
    "test:coverage": "tsdx test --coverage",
    "test:watch": "tsdx test --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": "prettier --write",
    "*.md": [
      "markdownlint -c ./.markdownlint.json -f -s",
      "prettier --write"
    ],
    "*.ts": "yarn lint:fix",
    "package.json": [
      "sort-package-json",
      "prettier --write"
    ]
  },
  "prettier": {
    "plugins": [],
    "printWidth": 70,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "manipulations.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  },
  "dependencies": {
    "crypto-js": "^3.1.9-1",
    "fp-ts": "^2.4.2",
    "list": "^2.0.19",
    "monocle-ts": "^2.0.1"
  },
  "devDependencies": {
    "@brettm12345/eslint-config-node": "1.0.6",
    "@types/crypto-js": "3.1.43",
    "@types/jest": "25.1.1",
    "@typescript-eslint/parser": "2.18.0",
    "eslint": "6.8.0",
    "eslint-plugin-jest": "23.6.0",
    "eslint-plugin-prefer-arrow-functions": "3.0.1",
    "husky": "4.2.1",
    "lint-staged": "10.0.7",
    "markdownlint-cli": "^0.21.0",
    "prettier": "1.19.1",
    "sort-package-json": "1.39.1",
    "tsdx": "0.12.3",
    "typescript": "3.7.5"
  },
  "renovate": {
    "bumpVersion": "patch",
    "extends": [
      "config:base",
      ":pinDependencies",
      ":pinDevDependencies",
      ":automergeAll"
    ]
  }
}
